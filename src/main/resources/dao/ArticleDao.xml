<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace为Dao接口的完整类名-->
<mapper namespace="dao.ArticleDao">

    <!--获取插入的ID-->
    <sql id="getLastId">
        SELECT LAST_INSERT_ID();
    </sql>

    <!--发布新作品-->
    <insert id="createWritingInfo" parameterType="Article">
        insert into `article` (`category`, `author_id`, `title`,
        `label1`, `label2`, `label3`, `label4`, `label5`, `liked`, `collected`)
        values (#{category},
        #{authorId},
        #{title},
        #{label1},
        #{label2},
        #{label3},
        #{label4},
        #{label5},
        #{liked},
        #{collected});
        <!-- 配置保存时获取插入的id -->
        <selectKey keyColumn="id" keyProperty="id" resultType="Long" order="AFTER">
            <include refid="getLastId"/>
        </selectKey>
    </insert>

    <select id="getWritingContent" resultType="String">
        SELECT `content`
        FROM `article_content`
        WHERE `article_id` = #{id};
    </select>

    <!--储存新作品的内容-->
    <insert id="createWritingContent">
        INSERT INTO `article_content` (`article_id`, `content`)
        VALUES (#{id}, #{content});
        <!-- 配置保存时获取插入的id -->
        <selectKey keyColumn="id" keyProperty="id" resultType="Long" order="AFTER">
            <include refid="getLastId"/>
        </selectKey>
    </insert>

    <!--更新文章-->
    <update id="updateWritingInfo" parameterType="Article">
        UPDATE `article`
        SET `category`=#{category},
            `title`=#{title},
            `label1`=#{label1},
            `label2`=#{label2},
            `label3`=#{label3},
            `label4`=#{label4},
            `label5`=#{label5}
        WHERE id = #{id}
          AND `author_id` = #{authorId};
    </update>

    <!--更新作品内容-->
    <update id="updateWritingContent">
        UPDATE `article_content`
        SET `content`= #{content}
        WHERE `article_id` = #{id};
    </update>

    <!--获取文章的具体数据-->
    <select id="getWritingById" resultType="Article">
        SELECT `article`.`id`,
               `partition`.`name` `partitionStr`,
               `article`.`category`,
               `author_id`,
               `title`,
               `label1`,
               `label2`,
               `label3`,
               `label4`,
               `label5`,
               `create_time`,
               `update_time`,
               `liked`,
               `collected`
        FROM `article`
                 LEFT JOIN `category` ON `article`.`category` = `category`.`id`
                 LEFT JOIN `partition` ON `category`.`partition` = `partition`.`id`
        WHERE `article`.`id` = #{id};
    </select>

    <delete id="deleteWritingById">
        DELETE
        FROM `article`
        WHERE id = #{writingId}
          AND author_id = #{deleterId};
    </delete>

    <select id="countWriting" resultType="long">
        SELECT COUNT(*)
        FROM `article`
                 LEFT JOIN `category` ON `article`.`category` = `category`.`id`
                 LEFT JOIN `partition` ON `category`.`partition` = `partition`.`id`
        WHERE `partition` = #{partition};
    </select>

    <!-- 按时间查询每页的文章记录-->
    <select id="getWritingListByOrder" resultType="Article">
        SELECT `article`.`id`,
        `partition`.`name` `partitionStr`,
        `category`.`id`,
        `author_id`,
        `title`,
        `label1`,
        `label2`,
        `label3`,
        `label4`,
        `label5`,
        `create_time`,
        `update_time`,
        `liked`,
        `collected`
        FROM `article`
        LEFT JOIN `category` ON `article`.`category` = `category`.`id`
        LEFT JOIN `partition` ON `category`.`partition` = `partition`.`id`
        WHERE `category`.`partition` = #{partition}
        <if test="order == 'time' ">
            ORDER BY `create_time` DESC
        </if>
        <if test="order == 'like' ">
            ORDER BY `liked` DESC
        </if>
        LIMIT #{start},#{rows};
    </select>

    <!--按时间查询每页的文章记录-->
    <select id="getSimpleWritingListByOrder" resultType="Article">
        SELECT `article`.`id`, `title`
        FROM `article`
        LEFT JOIN `category` ON `article`.`category` = `category`.`id`
        LEFT JOIN `partition` ON `category`.`partition` = `partition`.`id`
        WHERE `partition`.`id`= #{partition}
        <if test="order == 'time' ">
            ORDER BY `create_time` DESC
        </if>
        <if test="order == 'like' ">
            ORDER BY `liked` DESC
        </if>
        LIMIT #{start},#{rows};
    </select>

    <!--获取指定用户的博客总数-->
    <select id="getUserWritingCount" resultType="long">
        SELECT COUNT(*)
        FROM `article`
        WHERE author_id = #{id};
    </select>

    <!--根据编号获取作者-->
    <select id="getAuthorByWritingId" resultType="Long">
        SELECT `author_id`
        FROM `article`
        WHERE `id` = #{id};
    </select>

    <!--获取作品当前的点赞数-->
    <select id="getLikeCount" resultType="int">
        SELECT `liked`
        FROM `article`
        WHERE `id` = #{id};
    </select>

    <!--更新作品的点赞数-->
    <update id="updateLikeCount">
        UPDATE `article`
        SET `liked`=#{count}
        WHERE `id` = #{id};
    </update>

    <!--获取所有文章的id-->
    <select id="getAllWritingsId" resultType="Long">
        SELECT `id`
        FROM `article`;
    </select>

    <!--通过ids获取作品列表-->
    <select id="getWritingsByIds" resultType="pojo.bo.EsBo">
        SELECT `article`.`id`,
        `category`.`id` ,
        `category`.`name`,
        `author_id`,
        `title`,
        `label1`,
        `label2`,
        `label3`,
        `label4`,
        `label5`,
        `create_time`,
        `update_time`,
        `liked`,
        `collected`
        FROM `article`
        LEFT JOIN `category`
        ON `article`.`category` = `category`.`id`
        <where>
            `article`.`id` IN
            <foreach collection="ids" item="item" separator="," open="(" close=")" index="">
                #{item}
            </foreach>
        </where>
    </select>
</mapper>